Crie a base de exemplo (ElectroShop)

-- Script: electroshop_sample.sql
CREATE DATABASE IF NOT EXISTS electroshop;
USE electroshop;

-- produtos
CREATE TABLE produtos (
  idprodutos INT NOT NULL AUTO_INCREMENT,
  nome VARCHAR(150) NOT NULL,
  categoria VARCHAR(80) NOT NULL,
  preco DECIMAL(10,2) NOT NULL,
  estoque INT NOT NULL DEFAULT 0,
  PRIMARY KEY (idprodutos)
) ENGINE=InnoDB;

-- clientes
CREATE TABLE clientes (
  idclientes INT NOT NULL AUTO_INCREMENT,
  nome VARCHAR(150) NOT NULL,
  email VARCHAR(150) UNIQUE,
  telefone VARCHAR(30),
  PRIMARY KEY (idclientes)
) ENGINE=InnoDB;

-- vendas
CREATE TABLE vendas (
  idvendas INT NOT NULL AUTO_INCREMENT,
  cliente_id INT NOT NULL,
  data_venda DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP,
  PRIMARY KEY (idvendas),
  CONSTRAINT fk_vendas_clientes FOREIGN KEY (cliente_id)
    REFERENCES clientes(idclientes) ON DELETE RESTRICT ON UPDATE CASCADE
) ENGINE=InnoDB;

-- itens_venda (associação vendas ↔ produtos)
CREATE TABLE itens_venda (
  iditens_venda INT NOT NULL AUTO_INCREMENT,
  venda_id INT NOT NULL,
  produto_id INT NOT NULL,
  quantidade INT NOT NULL,
  preco_unitario DECIMAL(10,2) NOT NULL,
  PRIMARY KEY (iditens_venda),
  CONSTRAINT fk_itens_venda_vendas FOREIGN KEY (venda_id)
    REFERENCES vendas(idvendas) ON DELETE CASCADE ON UPDATE CASCADE,
  CONSTRAINT fk_itens_venda_produtos FOREIGN KEY (produto_id)
    REFERENCES produtos(idprodutos) ON DELETE RESTRICT ON UPDATE CASCADE
) ENGINE=InnoDB;

-- dados de exemplo
INSERT INTO produtos (nome,categoria,preco,estoque) VALUES
